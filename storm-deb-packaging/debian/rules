#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

# ORIG_PATH points to version that should be built.
# - !!! Ensure the right version is downloaded below
# - !!! Ensure the right version is stated in changelog.
# export ORIG_PATH=apache-storm-0.9.2-incubating
# export ORIG_PATH=apache-storm-0.9.3-incubating-SNAPSHOT
# export ORIG_PATH=apache-storm-0.9.3-rc1
# export ORIG_PATH=apache-storm-0.9.3-rc2-SNAPSHOT
export ORIG_PATH=apache-storm-0.9.3

override_dh_auto_build:

	# Getting the storm binary distribution.
	##############################################################################

	# Ensure apache zip is downloaded to project root `./downloads`
	# launchpad doesn't resolve hostnames. 192.87.106.229 is www.eu.apache.org
	#wget -c -P ../downloads http://192.87.106.229/dist/storm/apache-storm-0.9.3/apache-storm-0.9.3.zip
	# wget -c -P ../downloads http://www.eu.apache.org/dist/incubator/storm/apache-storm-0.9.2-incubating/apache-storm-0.9.2-incubating.zip
	# wget -c -P ../downloads http://people.apache.org/~ptgoetz/apache-storm-0.9.3-rc1/apache-storm-0.9.3-rc1.zip

	wget -c -P ../downloads http://192.87.106.229/dist/storm/apache-storm-0.9.3/apache-storm-0.9.3.zip

	# If snapshot version should be used - make sure lines above are commented,
	# copy required *.zip to `../downloads` (manual step)
	# and change ORIG_PATH and debian/changelog accordingly

	##############################################################################

	# Unpack required zip contents to orig folder.
	rm -rf ${ORIG_PATH}
	rm -rf orig

	unzip ../downloads/${ORIG_PATH}.zip
	mkdir orig
	mv ${ORIG_PATH}/* orig

	rm -rf ${ORIG_PATH}

	touch build

override_dh_auto_clean:
	@- $(RM) build
	@- $(RM) -r target

override_dh_installinit:
	# we want just to copy scripts to appropriate folders and keep them disabled.
	# insserv or update-rc.d should be called then manually,
	# depending on which role the node will play.
	dh_installinit --no-start --name storm-nimbus --update-rcd-params=disable
	dh_installinit --no-start --name storm-supervisor --update-rcd-params=disable
	dh_installinit --no-start --name storm-drpc --update-rcd-params=disable
	dh_installinit --no-start --name storm-ui --update-rcd-params=disable
	dh_installinit --no-start --name storm-logviewer --update-rcd-params=disable

%:
	dh $@
